<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3 "
    android:orientation="vertical">

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="207dp"
        android:layout_height="164dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/konum_login" />

    <EditText
        android:id="@+id/email_address"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/textview_login"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@drawable/textview_login"
        android:ems="10"
        android:hint="@string/star"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/login_now"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_login"
        android:onClick="onClickBtnLogin"
        android:text="@string/login_now"
        android:textColor="#e8f5e9"
        android:textSize="20sp" />

    <Button
        android:id="@+id/register_now"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_reg"
        android:text="@string/sign_up"
        android:textColor="#e8f5e9"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reset_password_textView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:text="Åžifremi Unuttum"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>